doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css", integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l", crossorigin="anonymous")
  body
    div(class="container mt-3 jumbotron")
        h3(class="text-primary") Enter data
        form(action="/products", method="post")
            div(class="form-group")
                label(for="title", class="font-weight-bold") Title
                input(type="text", name="title", class="form-control")
            
            div(class="form-group")
                label(for="price", class="font-weight-bold") Price
                input(type="number", name="price", class="form-control")

            div(class="form-group")
                label(for="thumbnail", class="font-weight-bold") Thumbnail
                input(type="thumbnail", name="thumbnail", class="form-control")
                
            input(type="submit", value="Submit", class="btn btn-success mt-3 mb-5")
        block index 