extends ./main

block index 
    h3(class="text-primary") Products
    br
    div(class="table-responsive")
        table(class="table table-dark")
            tr(class="text-warning")
                th(class="font-weight-bold") Title
                th(class="font-weight-bold") Price
                th(class="font-weight-bold") Thumbnail

            each product in products 
                tr 
                    td=`${product.title}`
                    td=`${product.price}`
                    td=`${product.thumbnail}`
